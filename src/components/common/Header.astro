---
const navItems = [
  { label: "Inicio", href: "/" },
  { label: "Menú", href: "/#menu" },
  { label: "Blog", href: "/blog" },
  { label: "Galería", href: "/galeria" },
  { label: "Contacto", href: "/contacto" },
];
---

<header
  class="sticky top-0 z-40 w-full backdrop-blur-md bg-slate-900/90 border-b border-slate-800"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex-shrink-0">
        <a
          href="/"
          class="text-2xl font-bold font-display text-amber-500 tracking-wider"
        >
          CAFE<span class="text-slate-100">RACER</span>
        </a>
      </div>

      <nav class="hidden md:block">
        <ul class="flex space-x-8">
          {
            navItems.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-slate-300 hover:text-amber-500 hover:bg-slate-800 px-3 py-2 rounded-md text-sm font-medium transition-colors"
                >
                  {item.label}
                </a>
              </li>
            ))
          }
        </ul>
      </nav>

      <div class="md:hidden">
        <button
          id="mobile-menu-btn"
          class="text-slate-300 hover:text-white p-2 focus:outline-none"
        >
          <span class="sr-only">Abrir menú</span>
          <svg
            class="h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <div
    id="mobile-menu"
    class="hidden md:hidden bg-slate-900 border-b border-slate-800"
  >
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class="text-slate-300 hover:text-amber-500 hover:bg-slate-800 block px-3 py-2 rounded-md text-base font-medium transition-colors"
          >
            {item.label}
          </a>
        ))
      }
    </div>
  </div>
</header>

<script>
  // Este script se ejecuta en el navegador del usuario
  const btn = document.getElementById("mobile-menu-btn");
  const menu = document.getElementById("mobile-menu");

  if (btn && menu) {
    btn.addEventListener("click", () => {
      // Alternamos la clase 'hidden' para mostrar/ocultar
      menu.classList.toggle("hidden");
    });
  }
</script>
